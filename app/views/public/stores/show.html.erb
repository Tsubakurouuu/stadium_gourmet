<div class="container">
  <div class="card p-2 mt-5 text-dark">
    <div class="row">
      <div class="col-12">
        <div class="card-img-top"><%= image_tag @store.image, style: "width: 100%;" %></div>
      </div>
      <div class="col-12">
        <table class="table table-borderless table-sm" style="table-layout: fixed;">
          <tr>
            <th width="10%"><i class="fas fa-store-alt"></i></th>
            <td width="90%"><h4 class="long-name"><strong><%= @store.name %></strong></h4></td>
          </tr>
        </table>
        <div class="row">
          <div class="col-6">
            <i class="fas fa-map-pin"></i>
            <span><%= @store.sale_area.name %></span>
          </div>
          <div class="col-6">
            <p class="text-center">販売商品数:<span class="ml-3"><%= @store.items.count %></span></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-5">
    <h4 class="subtitle">販売商品一覧</h4>
  </div>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-6 mt-3">
        <div class="row">
          <div class="card mx-auto" style="width: 95%;">
            <%= link_to store_item_path(@store.id, item.id), class: "text-dark" do %>
              <div class="card-img-top"><%= image_tag item.image, style: "width: 100%; aspect-ratio: 3 / 2; object-fit: cover;" %></div>
              <h5 class="card-title long-name"><%= item.name %></h5>
              <% if item.is_active == true %>
                <div>¥ <%= item.with_tax_price.to_s(:delimited) %></div>
              <% else %>
                <div class="text-danger" >売り切れ</div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <h5 style="margin-bottom: 100px;"></h5>
  </div>
</div>