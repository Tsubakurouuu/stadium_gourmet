<div class="container">
  <div class="row mt-5 mb-3">
    <h3 class="bg-dark"><%= @store.name %></h3>
  </div>
  <div class="row">
    <h4 class="bg-dark">販売商品一覧</h4>
  </div>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-6 mt-3">
        <div class="card">
          <%= link_to store_item_path(@store.id, item.id), class: "text-dark" do %>
            <div class="card-img-top"><%= image_tag item.image, style: "width: 100%" %></div><br>
            <h5 class="card-title long-name"><%= item.name %></h5>
            ￥ <%= item.with_tax_price.to_s(:delimited) %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <h5 style="margin-bottom: 100px;"></h5>
  </div>
</div>