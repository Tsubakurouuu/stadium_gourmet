<div class="container">
  <div class="row mt-5">
    <h3 class="bg-dark">店舗一覧</h3>
  </div>
  <% @stores.each do |store| %>
    <div class="card p-2 mt-3">
      <div class="row">
      <%= link_to store_path(store.id), class: "text-dark" do %>
        <div class="col-12">
          <div class="card-img-top"><%= image_tag store.image, style: "width: 100%;" %></div>
        </div>
        <div class="col-12 mt-1">
          <i class="fas fa-store-alt"></i> <span style="font-size: 20px;"><strong><%= store.name %></strong></span>
        </div>
        <div class="row p-3">
          <div class="col-6">
            <i class="fas fa-map-pin"></i> <span><%= store.sale_area.name %></span>
          </div>
          <div class="col-6">
            <span>販売商品数: <%= store.items.count %></span>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  <% end %>
  <div class="row">
    <h5 style="margin-bottom: 100px;"></h5>
  </div>
</div>