<div class="container">
  <div class="row mt-5">
    <h3>店舗一覧</h3>
  </div>
  <div class="row">
    <% @stores.each do |store| %>
    <div class="col-6 mt-3">
      <div class="card card-hover">
        <%= link_to store_path(store.id), class: "text-dark" do %>
          <div class="card-img-top"><%= image_tag store.get_image(200,200), style: "width: 100%" %></div><br>
          <h5 class="card-title"><%= store.name %></h5>
          <table class="table table-borderless">
            <tr>
              <th>販売エリア</th>
              <td><%= store.sale_area.name %></td>
            </tr>
            <tr>
              <th>販売商品数</th>
              <td><%= store.items.count %></td>
            </tr>
          </table>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>