<div class="container">
  <div class="row mt-5 mb-3">
    <h3 class="mx-auto">人気グルメランキング</h3>
  </div>
  <% @items.each do |item| %>
    <div class="card p-2 mt-3">
      <%= link_to store_item_path(item.store_id, item.id), class: "text-dark" do %>
        <div class="row ml-5">
          <h4><%= item.name %></h4>
        </div>
        <div class="row">
          <div class="col-6">
            <div><%= image_tag item.get_image(250,250) %></div>
          </div>
          <div class="col-6">
            <h4>¥ <%= item.with_tax_price.to_s(:delimited) %></h4>
            <p class="explanation-text"><%= item.explanation %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
  <div class="row">
    <h5 style="margin-bottom: 100px;"></h5>
  </div>
</div>
