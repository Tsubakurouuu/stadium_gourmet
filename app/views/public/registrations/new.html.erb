<div class="container">
  <div class="row mt-5">
    <h3>会員登録</h3>
  </div>
  <%= render "layouts/errors", obj: @customer %>
  <%= form_with model: @customer, url: customer_registration_path, method: :post do |f| %>
  <div class="row mt-3">
    <div class="col-8 mx-auto">
      <%= f.label :ニックネーム %><br />
      <%= f.text_field :nickname, class: "form-control" %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-8 mx-auto">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-8 mx-auto">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-8 mx-auto">
      <%= f.label :パスワード再入力 %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>
  <div class="row mt-5" style="justify-content: center;">
    <%= f.submit "新規登録", class: "btn btnlog" %>
  </div>
  <% end %>
  <div class="row">
    <p class="mt-5 mx-auto">ログインは<%= link_to "こちら", new_customer_session_path %></p>
  </div>
</div>

