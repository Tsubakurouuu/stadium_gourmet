<div class="contaner">
  <div class="row mt-5">
    <h3 class="bg-dark ml-3">注文情報</h3>
  </div>
  <div class="row">
    <div class="card w-75 mx-auto">
      <table class="table table-striped table-light">
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d/%H:%M') %></td>
        </tr>
        <tr>
          <th>座席情報</th>
          <td>
            <span><%= @order.seat_area %></span>-
            <span><%= @order.seat_alphabet %></span>-
            <span><%= @order.seat_number %></span>
          </td>
        </tr>
        <tr>
          <th>支払い方法</th>
          <td>クレジットカード</td>
        </tr>
        <tr>
          <th>注文状況</th>
          <td><%= @order.order_status_i18n %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row mt-3">
    <div class="card w-75 mx-auto">
      <table class="table table-striped table-light">
        <tr>
          <th>商品合計</th>
          <td class="text-right"><%= @product_total.to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <th>送料</th>
          <td class="text-right">200円</td>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <td class="text-right"><strong><%= @order.total_price.to_s(:delimited) %>円</strong></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row mt-3">
    <% @order_details.each do |order_detail| %>
</div>