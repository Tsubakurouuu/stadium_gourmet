<div class="container">
  <div class="row mt-5">
    <h2 class="bg-dark">管理者ログイン</h2>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row mt-5 ml-5">
    <div class="field" style="margin: 0 auto;">
      <%= f.label :メールアドレス, class: "bg-dark" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", size: "50" %>
    </div>
  </div>
  <div class="row mt-5 ml-5">
    <div class="field" style="margin: 0 auto;">
      <%= f.label :パスワード, class: "bg-dark" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", size: "50" %>
    </div>
  </div>
  <div class="row mt-5 ml-5">
    <%= f.submit "ログイン", class: "btn btn-primary mx-auto", style: "width: 20%;" %>
  </div>
  <% end %>
</div>